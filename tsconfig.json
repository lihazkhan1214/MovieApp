{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext","es6",],
    "target": "es2015",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "next": {
    "typescript": {
      "ignoreBuildErrors": true
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/Carousal.tsx", "components/Carousal.tsx", "app/(pages)/contact/ContactUs.jsx", "app/(pages)/trending/components/TrendingCarousal.tsx", "components/NavBar.tsx", "components/TabForMovieAndSeries.tsx", "components/Filter.tsx", "instrumentation.ts"],
  "exclude": ["node_modules"]
}
